<!-- 个人信息 -->
<view class="summary">

		<image src="{{user.userInfo.avatar ? user.userInfo.avatar : '/img/bottom/line.png'}}" class="avatar" />

		<view class="nickname">{{user.userInfo.nickname}}</view>
</view>
<!-- 账户 -->
<view class="account">
	<view class="item">
		<view class="value coupon">0</view>
		<view class="caption">推荐人数</view>
	</view>
	<view class="item">
		<view class="value balance">0</view>
		<view class="caption">总佣金</view>
	</view>
</view>
<!-- 列表 -->
<view class="listview">
	<view class="item">
		<image class="hd" src="/images/address.png" />
		<navigator class="bd" url="../commission/commission" open-type="navigate" hover-class="none">我的推荐</navigator>
		<view class="ft"></view>
	</view>
    <view class="item">
		<image class="hd" src="/images/setting.png" />
		<navigator class="bd" url="../../shop/setting/setting" open-type="navigate" hover-class="none">我的佣金</navigator>
		<view class="ft"></view>
	</view>
	<view class="item">
		<image class="hd" src="/images/category.png" />
		<navigator class="bd" url="../../category/list/list" open-type="navigate" hover-class="none">我的资料</navigator>
		<view class="ft"></view>
	</view>
	<view class="item">
		<image class="hd" src="/images/food.png" />
		<navigator class="bd" url="../../food/list/list" open-type="navigate" hover-class="none">我的消息</navigator>
		<view class="ft"></view>
	</view>
    <view class="item">
		<image class="hd" src="/images/food.png" />
		<navigator class="bd" url="../../food/list/list" open-type="navigate" hover-class="none">意见反馈</navigator>
		<view class="ft"></view>
	</view>
    <view class="item">
		<image class="hd" src="/images/food.png" />
		<navigator class="bd" url="../../food/list/list" open-type="navigate" hover-class="none">联系客服</navigator>
		<view class="ft"></view>
	</view>
</view>

<!-- 退出登录 -->
<view class="logout" bindtap="logout">
	退出登录
</view>