/*会员中心*/
page {
	background-color: #f1f1f1;
}

/*个人信息*/
.userinfo {
	height: 240rpx;
	background: #f11b1b;
	display: flex;
	flex-direction: column;
	justify-content: center;
	align-items: center;
}

/*头像*/
.userinfo-avatar {
	width: 60px;
	height: 60px;
	margin: 15px;
	border-radius: 50%;
}

/*昵称*/
.userinfo-nickname {
	color: white;
	font-size: 16px;
}
.userinfo-button{
	background-color:white;
	font-size: 35rpx;
}
/*账户信息*/
.account {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	margin-top: 10px;
	background: white;
}

/*每一项*/
.account .item {
	display: flex;
	flex-direction: column;
	text-align: center;
	margin-left: 0;
	flex: 1;
	border-right: 1px solid #eee;
}

.account .item:last-child {
	border-right: 0;
}

/*数值*/
.account .item .value {
	font-size: 18px;
	padding-top: 10px;
}

/*after通用样式*/
.account .item .value:after {
	font-size: 12px;
	margin-left: 5px;
}

/* 推荐人数 */
.account .item .coupon {
	color: var(--themeColor);
}
/*单位*/
.account .item .coupon:after {
	content: '个';
}

/* 总佣金 */
.account .item .balance {
	color: var(--themeColor);
}
/*单位*/
.account .item .balance:after {
	content: '元';
}
/*标签*/
.account .item .caption {
	margin-top: 5px;
	color: #666;
	font-size: 14px;
	height: 100rpx;
}

/*.账户信息*/

/*通用列表*/
.listview {
	margin-top: 15rpx;
}

/*列表项*/
.listview .item {
	background: white;
	display: flex;
	flex-direction: row;
	align-items: center;
	position: relative;
	margin-left: 0;
	height: 50px;
	top: 40rpx;
	border-bottom: 1rpx solid #ddd;
}

/*箭头*/
.listview .item:after {
	content: " ";
	height: 8px;
	width: 8px;
	border-width: 2px 2px 0 0;
	border-color: #ccc;
	border-style: solid;
	transform: rotate(45deg);
	position: absolute;
	margin-top: -4px;
	top: 50%;
	right: 22px;
}

.listview .item .hd {
	width: 25px;
	height: 25px;
	margin: 5px 0;
	padding-left: 20px;
}

.listview .item .bd {
	font-size: 16px;
	margin-left: 10px;
	flex: 1;
}

/*.通用列表*/

/*退出登录*/
.logout {
	background: white;
	padding: 2px 0;
	margin-top: 20px;
	margin-bottom: 20px;
	color: #f23030;
	text-align: center;
	font-size: 18px;
	line-height: 220%;
}