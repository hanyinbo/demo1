.summary{
    background-color: var(--themeColor);
    height: 250rpx;
    display: flex;
    flex-direction: column;
    flex: 1;
    align-items: center;
    justify-content: center;
}
/* .summary  */
.nickname{
    color: rgb(255, 255, 255);
    font-size: 32rpx;
}
.nickname_price{
   color: rgb(255, 255, 255);
   font-size: 32rpx;
}
/*单位*/
.summary .nickname_price:after {
    content: '元';
    font-size: 25rpx;
    margin-left: 5rpx;
}
.account {
	display: flex;
	flex-direction: row;
	justify-content: space-around;
	margin-top: 10px;
	background: white;
}

.account .item:last-child {
	border-right: 0;
}

/*数值*/
.account .item .value {
	font-size: 18px;
	padding-top: 10px;
}
/*after通用样式*/
.account .item .value:after {
	font-size: 12px;
	margin-left: 5px;
}
.account .item {
	display: flex;
	flex-direction: column;
	text-align: center;
	margin-left: 0;
	flex: 1;
	border-right: 1px solid #eee;
}
/* 推荐人数 */
.account .item .value {
	color: var(--themeColor);
}
/*人数 单位*/
.account .item .number:after {
	content: '个';
}

/* 总佣金数 */
.account .item .commission {
	/* color: var(--themeColor); */
}
/*总佣金 单位*/
.account .item .price:after {
	content: '元';
}

