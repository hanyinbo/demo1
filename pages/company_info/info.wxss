page {
	background-color: #f1f1f1;
}

.detail_swiper{

  
}
/* 轮播图 */
.detail_swiper swiper{
    height: 49vw;
    text-align: center;
}
/* 公司轮播图片 */
.detail_swiper swiper image{
    margin: 40rpx;
    width: 90%;
    border-radius: 20rpx;
}
/* 公司名称 */
.index_title{
    display: flex;
    flex-direction: row;  
    height: 60rpx;
    width: 100%;
    margin-bottom: 25rpx;
    margin-top: 18rpx;
    font-size: 46rpx;
    color: #494848;
}
/* 详情容器 */
.title_container{
    height: 100%;
    display: flex;
}
/* 公司名称分割图片 */
.title_img{
    height:58rpx;
    width: 45rpx;
    align-self: center;
    margin-left: 17rpx;
}
.position{
    display: flex;
    flex-wrap: wrap;
    justify-content: space-between;
    margin: 30rpx 30rpx 30rpx 30rpx;
}
.position_text{ 
    font-size: 30rpx;
    color: #1785eb;
    font-weight: bolder;
    margin-left: 10rpx ;
    background-color: #c2e6f1;
}
/* 佣金 */
.money{
    margin-left: 30rpx;
    font-size: 35rpx;
    color: var(--themeColor);
}
.money::before{
   content: '佣金： ￥';
}
/* 地址 */
.address{
    display: flex;
    margin-top: 50rpx;
    margin-left: 20rpx;
}
.address_img{
    width: 40rpx;
    height: 40rpx;
}
.address_text{
    font-size: 30rpx;
    color: #A4A4A4;
}
/* 福利待遇 */
.welfare{
    margin: 30rpx 30rpx 30rpx 30rpx;
    display: flex;
    flex-direction: column;
}
.welfare_title{
  font-size: 38rpx;
  margin-bottom: 15rpx;
  color: #424242;
}
.welfare_text{
    color: #848484;
    font-size: 30rpx;
}
/* 招聘要求 */
.job_require{
    display: flex;
    flex-direction: column;
    margin: 30rpx 30rpx 30rpx 30rpx;
    color: #848484;
}
.req_title{
    font-size: 38rpx;
    margin-bottom: 15rpx;
    color: #424242;
}
.int_addr{
    display: flex;
    flex-direction: column;
    margin: 30rpx 30rpx 30rpx 30rpx;
}
.int_addr_info{
    margin-top: 30rpx;
}
/* 工具栏 */
.btm_tool{
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 110rpx;
  display: flex;
  background-color: rgb(252, 249, 249);
}
.tool_item{
   flex: 1;
   display: flex;
   flex-direction: column;
   margin-left: 30rpx;
   margin-top: 15rpx;
}
/* 立即推荐 */
.btn_record{
    flex: 2;
    display: flex;
    margin-left: 30rpx;
    margin-top: 20rpx;
   background-color: var(--themeColor);
   align-items: center;
   justify-content: center;
}
/* 工具栏logo */
.item_img{
    width: 40rpx;
    height: 40rpx;
}
