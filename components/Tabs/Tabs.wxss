.s1 {
  display: flex;
  margin: 10px 0;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #ddd;
}
.com-sContent {
  position: relative;
  padding-right: 20px;
  text-align: center;
  align-items: center;
  flex: 1;
  font-size: 14px;
}

.content {
  width: 100%;
  max-height: 350px;
  overflow: scroll;
  padding-top: 5rpx;
  padding-bottom: 20px;
  position: absolute;
  background: #ffffff;
  top: 70px;
  z-index: 100;
}
.com-sContent image {
  width: 8px;
  height: 8px;
  position: absolute;
  right: 47rpx;
  top: 100px;
}
.option {
  margin-top: 20px;
  margin-bottom: 10px;
  margin-left: 20px;
  font-size: 14px;
}
/*联动样式*/
.currentNav {
  color: var(--themeColor);
 
}
.current {
  color: #ffffff;
  background: var(--themeColor) !important;
  border-bottom: 2rpx solid var(--themeColor);
}
.show {
  display: block;
}
.hidden {
  display: none;
}
.btn-ok {
  margin-top: 5px;
  border-radius: 20px;
  padding: 5px 30px;
  color: #ffffff;
  font-size: 14px;
  background: var(--themeColor);
  float: right;
  margin-right: 40px;
}
.btn-no {
  margin-top: 10px;
  border-radius: 20px;
  padding: 5px 30px;
  color: var(--themeColor);
  font-size: 14px;
  background: #F9F9F8;
  float: left;
  margin-left: 20px;
}
